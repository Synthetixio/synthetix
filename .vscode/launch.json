	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Deploy Script",
			"program": "${workspaceFolder}/deploy.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Verify Script",
			"args": ["verify", "-n", "kovan", "-d", "publish/deployed/kovan"],
			"program": "${workspaceFolder}/publish/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Deployment Script",
			"args": ["deploy", "-n", "kovan", "-d", "publish/deployed/kovan", "-g", "15"],
			"program": "${workspaceFolder}/publish/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Build Script",
			"args": [
				"build",
			],
			"program": "${workspaceFolder}/publish/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Build Script",
			"args": [
				"build",
			],
			"program": "${workspaceFolder}/publish/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "truffle test (debuggable)",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/truffle-core/cli.js",
			"args": ["test"],
			"runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.16.3/bin/node"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Int test",
			"program": "${workspaceFolder}/int-test/index.js",
			"runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.16.3/bin/node"
		},
		{
			"name": "Launch via npm (debuggable)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": ["run-script", "test"],
			"runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.16.3/bin/npm/"
		}
	]
}
