		"hardhat-gas-reporter": "~1.0.4",
		"husky": "^4.3.0",
		"is-ci": "^2.0.0",
		"lodash.clonedeep": "^4.5.0",
		"lodash.uniq": "^4.5.0",
		"mocha": "8.1.3",
		"mustache": "^4.0.1",
		"openzeppelin-solidity-2.3.0": "npm:openzeppelin-solidity@2.3.0",
		"p-limit": "1.3.0",
		"prettier": "~1.19.1",
		"prettier-plugin-solidity": "1.0.0-beta.6",
		"pretty-quick": "~2.0.2",
		"rlp": "^2.2.6",
		"semver": "7.3.2",
		"solc": "0.5.16",
		"solhint": "~3.3.4",
