			"web3-bzz": false,
			"bufferutil": false,
			"utf-8-validate": false,
			"web3-shh": false,
			"highlight.js": false,
			"core-js-pure": false,
			"husky": false,
			"@lavamoat/preinstall-always-fail": false
		}
	}
}
