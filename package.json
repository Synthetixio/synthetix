		"solidity-coverage": "^0.7.17",
		"table": "^5.0.2",
		"wait-port": "^0.2.2",
		"web3": "1.3.3",
		"webpack": "4.44.0",
		"webpack-cli": "3.3.12",
		"yaml-validator": "^3.0.0"
	},
	"dependencies": {
		"abi-decoder": "2.3.0",
		"commander": "8.1.0",
		"inquirer": "^6.5.2",
		"inquirer-list-search-prompt": "^1.0.2",
		"js-levenshtein": "^1.1.6",
		"pretty-error": "^2.1.1",
		"solidity-parser-antlr": "^0.4.11",
		"web3-utils": "1.2.2"
	},
	"lavamoat": {
		"allowScripts": {
			"uglifyjs-webpack-plugin": false,
			"fsevents": false,
			"keccak": false,
			"secp256k1": false,
